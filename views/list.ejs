<%- include("header.ejs") -%>
<div class="box" id="heading">
    <h1> <%= listTitle %></h1>
</div>
<div class="box">
    <!-- check here if it outputs double value to an array -->

    <% newListItems.forEach((item) => { %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
                <p><%= item.name %></p>
            </div>
            <input type="hidden" name="listName" value="<%= listTitle %>"></input><!--make sure to include closing tag because its not a self closing tag-->
        </form>
    <% }); %>

    <form action="/" class="item" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
</div>

<%- include("footer.ejs") -%>
